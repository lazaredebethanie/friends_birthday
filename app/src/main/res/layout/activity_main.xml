<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal" android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="DataBase Access V2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginTop="80dp"
                android:textSize="30sp" android:textColor="@color/colorPrimary" android:textStyle="bold|italic"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
                android:layout_marginTop="50dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/go"
                android:id="@+id/imageButton"
                android:background="@null"
                android:layout_marginTop="50dp" android:onClick="onClickGo"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>